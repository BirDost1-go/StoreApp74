@model IEnumerable<FCB.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 15%;">Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Owner</th>
                            <th style="width: 20%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" style="width: 100px; height: 100px; object-fit: cover;" class="rounded shadow-sm" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded shadow-sm text-white d-flex justify-content-center align-items-center" style="width: 100px; height: 100px;">
                                            <small>No Image</small>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                </td>
                                <td>
                                    @item.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                                </td>
                                <td>
                                    @(item.Owner != null ? item.Owner.PhoneNumber : "N/A")
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-pencil-alt"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>












