@model FCB.Models.Product

@{
    ViewData["Title"] = "Delete";
}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> You are about to delete this record
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to permanently delete this?</h5>
                    <p class="text-muted">This action cannot be undone.</p>

                    <hr />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
                        </div>
                    }
                    <dl class="row">
                        <dt class="col-sm-3 text-muted">Product name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 text-muted">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 text-muted">Price</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-3 text-muted">Stock</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Stock)</dd>



                        <dt class="col-sm-3 text-muted">Created at</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-3 text-muted">Owner</dt>
                        <dd class="col-sm-9">
                            @if (Model?.Owner != null)
                            {
                                @Model.Owner.PhoneNumber
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Yes, Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

