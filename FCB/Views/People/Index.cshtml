@model IEnumerable<FCB.Models.People>

@{
    ViewData["Title"] = "People";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h1><i class="bi bi-people-fill"></i> @ViewData["Title"]</h1>
            <p class="lead">This is a sample application to demonstrate ASP.NET Core MVC features.</p>
        </div>
        <div class="col text-end align-self-center">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>

    </div>

    <div class="row">
        @foreach (var person in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <i class="bi bi-person-circle text-primary"></i>
                            @person.FirstName @person.LastName
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">@person.Email</h6>
                        <p class="card-text mt-3">
                            <i class="bi bi-telephone-fill"></i>
                            <strong>Phone:</strong> @person.PhoneNumber
                        </p>

                        <div class="mt-auto pt-3">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@person.Id" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>